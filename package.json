{
    "name": "infinite-tiles-v2",
    "version": "0.2.0",
    "author": {
        "name": "tankbottoms.eth",
        "url": "https://tiles.wtf"
    },
    "description": "Infinite Tiles v2",
    "license": "LicenseRef-my-special-license",
    "scripts": {
        "build": "npm run compile",
        "commit": "git-cz",
        "compile": "npx hardhat compile",
        "clean": "npx hardhat clean",
        "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\" --show-stack-traces",
        "test:opt": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat test",
        "test": "npx hardhat test",
        "lint:sol": "solhint 'contracts/**/*.sol'",
        "lint:prettier": "prettier --list-different 'contracts/**/*.sol'",
        "prettier": "prettier --config ./.prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
        "prettier:check": "prettier --check --config ./.prettierrc \"**/*.{js,json,md,sol,ts}\"",
        "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
        "lint": "npm run lint:sol && npm run lint:prettier",
        "deploy": "npx hardhat run scripts/rinkeby.ts --network localhost",
        "deploy:mainnet": "npx hardhat run scripts/mainnet.ts --network alchemy_mainnet",
        "deploy:rinkeby": "npx hardhat run scripts/2_deploy.ts --network alchemy_rinkeby",
        "verify": "echo \"Enter Ropsten contract address=>\" && read && npx hardhat verify --network ropsten $REPLY",
        "git": "git add . && echo \"Enter your commit message =>\" && read && git commit -m \"$REPLY :construction_worker: :octocat: :four_leaf_clover: :pray:\" && git push origin main",
        "gen:merkle-root": "ts-node scripts/data/crawl.ts && ts-node merkle-distributor/index.ts -i scripts/data/merkle-input.json -o scripts/data/merkle-root.json && rm -f scripts/data/merkle-input.json"
    },
    "devDependencies": {
        "@alch/alchemy-web3": "^1.2.4",
        "@codechecks/client": "^0.1.10",
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@ethersproject/abi": "^5.2.0",
        "@ethersproject/abstract-signer": "^5.2.0",
        "@ethersproject/bignumber": "^5.2.0",
        "@ethersproject/bytes": "^5.2.0",
        "@ethersproject/contracts": "^5.2.0",
        "@ethersproject/providers": "^5.2.0",
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-etherscan": "^2.1.1",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@openzeppelin/hardhat-upgrades": "^1.8.2",
        "@typechain/ethers-v5": "^7.0.0",
        "@typechain/hardhat": "^2.0.2",
        "@types/chai": "^4.2.18",
        "@types/express": "^4.17.13",
        "@types/fs-extra": "^9.0.11",
        "@types/mocha": "^8.2.2",
        "@types/node": "^15.6.1",
        "@typescript-eslint/eslint-plugin": "^4.25.0",
        "@typescript-eslint/parser": "^4.25.0",
        "chai": "^4.3.4",
        "commitizen": "^4.2.4",
        "crypto": "^1.0.1",
        "cz-conventional-changelog": "^3.3.0",
        "dotenv": "^10.0.0",
        "eslint": "^7.27.0",
        "eslint-config-prettier": "^8.3.0",
        "ethereum-waffle": "^3.3.0",
        "ethers": "^5.2.0",
        "fs-extra": "^10.0.0",
        "hardhat": "^2.9.5",
        "hardhat-gas-reporter": "^1.0.4",
        "lint-staged": "^11.0.0",
        "mocha": "^8.4.0",
        "prettier": "^2.4.0",
        "prettier-plugin-solidity": "^1.0.0-beta.19",
        "shelljs": "^0.8.4",
        "solhint": "^3.3.6",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.8.0-beta.1",
        "ts-generator": "^0.1.1",
        "ts-node": "^10.0.0",
        "typechain": "^5.0.0",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "@jbx-protocol/contracts-v2": "^4.0.0",
        "@openzeppelin/contracts": "^4.6.0",
        "@rari-capital/solmate": "^6.4.0",
        "@uniswap/v3-core": "^1.0.1",
        "@uniswap/v3-periphery": "^1.4.1",
        "commander": "^9.1.0",
        "cross-fetch": "^3.1.5",
        "express": "^4.18.1",
